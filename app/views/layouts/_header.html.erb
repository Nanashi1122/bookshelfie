<div class="Header">
  <nav class="NavigationBar" role="navigation">
    <div class="HeaderContainer">
      <div class="NavigationBar__menus">
        <%= link_to root_path do %>
          <%= image_tag("common/BookShelfie-logo.png", class: "ServiceLogo") %>
        <% end %>
      </div>

      <div class="NavigationBar__icons">
        <ul class="NavigationIconList">
          <li class="NavigationIconList__item">
            <% if user_signed_in? %>
              Logged in as <strong><%= current_user.name %></strong>.
              <%= button_to "ユーザー設定", edit_user_registration_path, method: :get, class: "navbar-button" %>
              <%= button_to "ログアウト", destroy_user_session_path, method: :get, class: "navbar-button" %>
            <% else %>
              <%= button_to "新規登録", new_user_registration_path, method: :get, class: "navbar-button" %>
              <%= button_to "ログイン", new_user_session_path, method: :get, class: "navbar-button" %>
              <%= button_to "ゲストログイン", users_guest_sign_in_path, method: :post, class: "navbar-button" %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</div>
